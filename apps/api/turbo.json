{
  "$schema": "https://turborepo.com/schema.json",
  "extends": ["//"],
  "tasks": {
    "build": {
      "dependsOn": [
        "^@repo/database#build",
        "^@repo/zod-schemas#build",
        "^@repo/nest-shared#build"
      ],
      "outputs": ["dist/**"]
    },
    "swagger:only": {
      "dependsOn": [
        "^@repo/database#build",
        "^@repo/zod-schemas#build",
        "^@repo/nest-shared#build"
      ],
      "outputs": ["swagger.json"]
    }
  }
}
