{
  "$schema": "https://turborepo.com/schema.json",
  "globalPassThroughEnv": ["RENDER_*", "DATABASE_URL"],
  "tasks": {
    "prisma:generate": {},
    "build": {
      "dependsOn": ["^build", "^prisma:generate"],
      "outputs": [".next/**", "!.next/cache/**", "apps/recipes-api/dist/**"]
    },
    "dev": {
      "dependsOn": ["^prisma:generate"],
      "persistent": true,
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
